/* 视频详情 */

.comment image {
  transform: scale(0.85);
}

.mainVideo {
  position: relative;
  z-index: 10;
}

.iconContant {
  position: absolute;
  z-index: 100;
  right: 10px;
  bottom: 30px;
}

.iconContant image {
  width: 20px;
  height: 20px;
  display: block;
  margin-left: 4px;
}

.iconContant-item {
  display: block;
}

.iconContant-item text {
  display: block;
  color: #fff;
}

.videoplay_btn {
  position: relative;
}

.play {
  position: absolute;
  left: 34%;
  width: 92rpx;
  height: 92rpx;
  display: none;
}

.descOverFlow {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  /* 数字 字母 换行 */
  word-wrap: break-word;
}

.dec {
  color: #222;
  padding: 0px 20rpx 0rpx;
  text-align: left;
}

.activeBox {
  font-size: 20rpx;
  color: #fff;
}

.activeBox .watchCount {
  position: absolute;
  bottom: 18rpx;
  left: 20rpx;
  text-shadow: 0 0 10rpx #999;
}

.activeBox  .heartCount {
  position: absolute;
  bottom: 18rpx;
  right: 20rpx;
  text-shadow: 0 0 10rpx #999;
}

.heartCount image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 4rpx;
}


